@model IEnumerable<KitapAlimSatim.Web.Models.ProductModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["HomePage"].Value;
}
@section Search
{
    <partial name="_SearchPanel" />
}
<div class="homepage-books">
    @foreach (var item in Model)
    {
        <div class="book-item col-md-3">
            <div class="book-item-div">
                <a href="~/Product/@item.Product.Id">
                    <center>@item.Book.Name</center>
                    <img src="~/media/image/@item.Book.FileName" />
                    <br />
                    <b>
                        @item.Book.Author
                        <br />
                        @item.Book.Publisher
                        <br />
                        @item.Product.Price TL
                    </b>
                </a>
            </div>
        </div>
    }
    @if(Model.Count() == 0)
    {
        <span>Ürün bulunamadı.</span>
    }
</div>
